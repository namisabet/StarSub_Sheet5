                    @Html.ActionLink("Totals", "Profit", "Home")

                </div>

                //Test View page, returns 404
                <div class="text-center">

                    <a href="~/Views/Home/View.cshtml">View</a>

                </div>
                    **/
            }
        </div>

    }
</body>